<h1>{{user.username}}'s Favourites</h1>

  <table>
    <tr>
      <th>Apod date</th>
      <th>Apod title</th>
      <th>View</th>
    </tr>
    {{#each allApods as |apod|}}
    <tr>
      <td>{{apod.date}}</td>
      <td>{{apod.title}}</td>
      <td><a href="/apods/{{apod._id}}">View</a></td>
    </tr>
  </table>
{{/each}}
